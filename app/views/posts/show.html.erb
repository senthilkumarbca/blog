<h1 class="display-3">Post</h1>
<div class="row">
  <div class="col-md-6">
    <%= render @post %>
  </div>
  <div class="col-md-6">
    <%= image_tag @post.image, style: "height:250px" if @post.image.attached? %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-6">
      <h3>Comments(<%= @post.comments.size %>)</h3>
      <%= render @post.comments %>
      <%= render 'comments/form', comment: @comment %>
  </div>
  <div class="col-md-6">
    <h3>Ratings</h3>
    <%= render 'ratings/form' %>
    <% @ratings.each do |rating| %>
      <%= render rating %>
    <% end %>
  </div>
</div>


<hr>
<div class="my-5">
  <%= link_to "Edit this post", edit_topic_post_path(@topic, @post), class:"btn btn-outline-info"  if can? :update, @post %>
  <%= link_to "Back to posts", posts_path, class: "btn btn-info" %>
  <%= link_to "Destroy", [@topic, @post], class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } if can? :destroy, @post %>
</div>
